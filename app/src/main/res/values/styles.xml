<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="appstyle_common_tabhost_tab_rdp">
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_tiny</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="appstyle_basic_text">
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>
</resources>
